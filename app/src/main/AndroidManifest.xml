<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NewYogaApplication"
        tools:targetApi="31">

        <!-- Main Activity -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other Activities -->
        <activity android:name=".activities.ManageCoursesActivity" />
        <activity android:name=".activities.ManageClassesActivity" />
        <activity android:name=".activities.CourseDetailActivity" />
        <activity android:name=".activities.ManageAccountActivity"/>
        <activity android:name=".activities.TeacherActivity" />

        <!-- RegisterActivity Declaration -->
        <activity android:name=".activities.RegisterActivity" />

        <!-- LoginActivity Declaration -->
        <activity android:name=".activities.LoginActivity" />

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
</manifest>
